{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "pytest",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Commit to GitHub",
            "type": "shell",
            "command": "git add . && git commit -m 'Auto-commit' && git push",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}